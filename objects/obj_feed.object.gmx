y=mouse_y-(sprite_height)// following mouse



if  place_meeting(x,y,obj_mouth)
{
    //if food in front of mouth, play eat animation

    obj_mouth.sprite_index=spr_mouth_eat
    obj_mouth.image_speed=1
    
    if obj_mouth.image_index==4
    bite_number++
    
}
else
{
    obj_mouth.sprite_index=spr_mouth_happy
}
//when bites are more than 2
if bite_number&gt;2
{
    var temp_key=copy_obj//generate a key accessing food_inventory database
    var temp_amount=ds_map_find_value(data_ctrl.fridge_inventory,temp_key)-1//generate a new amount of the chosen food
    ds_map_replace(data_ctrl.fridge_inventory,temp_key, temp_amount); //replace amount by new amount
    copy_obj.food_amount-- //update amount in food instance
    obj_mouth.sprite_index=spr_mouth//reset mouth to normal
    instance_destroy()
}

if mouse_check_button_released(mb_left)
{
    //restore default mouth sprite then destroy obj_feed instance
    obj_mouth.sprite_index=spr_mouth
    instance_destroy()
}
